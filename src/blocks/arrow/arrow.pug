mixin arrow(options = {direction: ""})
    - let {direction} = options;
    .arrow
        button( class = `arrow__button arrow__button_direction_${direction}`)
            if direction === 'left'
                .arrow__image
                    .arrow__image-left-top
                    .arrow__image-left-bottom
            if direction === 'right'
                .arrow__image
                    .arrow__image-right-top
                    .arrow__image-right-bottom

