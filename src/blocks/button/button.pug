mixin button(options={size:"", color:"", name: "", title: "", addClassName: "", location: ""})
    - let {size, color, name, title, addClassName, location} = options;
    .button
        button( class = `button__item button__item_size_${size} button__item_color_${color} ${addClassName}`,
                name = `${name}`,
                onclick=`${location}`)= title