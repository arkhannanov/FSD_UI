include ../header-social-network/header-social-network.pug
include ../profile/profile.pug
include ../right-side/right-side.pug
include ../news/news
include ../events/events
include ../navigation/navigation.pug

mixin page-social-network
    main.page-social-network
        .page-social-network-wrapper
            .header
                +header-social-network({
                    source: "src/blocks/header-social-network/images/user.png",
                    name: "Sarah Brown"
                })
            .content-container
                +profile({
                    headline: "my profile",
                    rightSideHeader: "Sarah Brown",
                    profession: "Actress",
                    phone: "+79263864674",
                    twitter: "twitter",
                    facebook: "facebook",
                    horror: "Horror",
                    thriller: "Thriller",
                    drama: "Drama",
                    comedy: "Comedy"
                })
                +right-side({
                    profile: "Profile",
                    feedback: "Feedback",
                    newsAndEvents: "News and Events"
                })
            .navigation
                +navigation({
                    socialNetwork: "social-network",
                    job: "job",
                    interior: "interior",
                    rentAuto: "rent-auto"
                })
            .footer-social-network