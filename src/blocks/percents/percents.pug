mixin percents(options={percent: ``})
    - let {percent} = options;
    - let percentValue = percent/100*282.6;
    - let restValue = 282.6 - percentValue;
    .percents
        svg.percents__svg(width="100%",height="100%", viewBox="0 0 100 100")
            circle(class="segment", cx="50", cy="50", r="45", fill="transparent", stroke="#e75735", stroke-width="5", stroke-dasharray = `${percentValue} ${restValue}`, stroke-dashoffset="70.65")
        .percents__number= percent