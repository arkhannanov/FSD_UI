mixin messaging(options = {name:"", source:"", firstMessage:"", secondMessage:"", buttonTitle:""})
    -let {name, source, firstMessage, secondMessage, buttonTitle} = options;
    .messaging
        .messaging__name-container
            p.messaging__name= name
        .messaging__dark-block
        .messaging__avatar-container
            img.messaging__avatar(src=source, alt="User 2", hspace="5", vspace="5")
        .messaging__dark-container    
            .messaging__icons  
                .messaging__first-icon
                .messaging__second-icon 
            .messaging__first-message-container
                p.messaging__first-message= firstMessage
            .messaging__second-message-container
                p.messaging__second-message= secondMessage
            button.messaging__button(name="button")= buttonTitle
